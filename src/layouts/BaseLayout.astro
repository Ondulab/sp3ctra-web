---
// Fonts
import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/jetbrains-mono/200.css";
import "@fontsource/jetbrains-mono/400.css";
import "@fontsource/jetbrains-mono/500.css";
import "@fontsource/jetbrains-mono/600.css";

// SEO
import copy from "@content/copy/fr.json";

const title = copy.seo.title;
const description = copy.seo.description;
const ogImage = copy.seo.ogImage;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

import "../styles/global.css";
import { Image } from "astro:assets";
import spectrumBg from "../assets/images/spectrum3.jpg";
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content="Jérôme Abel" />
    <meta name="robots" content="index, follow" />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />

    <link rel="canonical" href={canonicalURL} />

    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "Product",
            "name": "Sp3ctra_",
            "description": "Sp3ctra_ - système de captation linéaire haute résolution de 3465 capteurs photosensibles pour artistes, musiciens, chercheurs, industriels et pédagogues.",
            "image": "https://sp3ctra.io/images/og-image.jpg",
            "brand": {
              "@type": "Brand",
              "name": "Sp3ctra_"
            }
          },
          {
            "@type": "Organization",
            "name": "Sp3ctra_",
            "url": "https://sp3ctra.io",
            "logo": "https://sp3ctra.io/favicon.svg",
            "contactPoint": {
              "@type": "ContactPoint",
              "email": "contact@sp3ctra.io",
              "contactType": "Customer Support"
            }
          }
        ]
      }
    </script>

    <meta http-equiv="Cache-control" content="public" />
    <meta http-equiv="Expires" content="259200" />
  </head>
  <body class="relative grid min-h-screen auto-rows-[auto_1fr_auto]">
    <div class="bg-background fixed inset-0 -z-10">
      <div class="relative h-full w-full">
        <Image
          src={spectrumBg}
          alt=""
          class="absolute -top-[50px] w-full sm:-top-[100px] md:-top-[150px] lg:-top-[200px]"
          widths={[640, 768, 1024, 1280, 1920]}
          sizes="100vw"
          loading="eager"
          quality={95}
        />
        <div
          class="absolute inset-0 bg-gradient-to-b from-transparent via-black/50 to-black"
          aria-hidden="true"
        >
        </div>
      </div>
    </div>

    <slot />

    <script>
      import { initFadeInImages } from "@/scripts/animations";

      // Initialize fade-in animations
      initFadeInImages();
    </script>
  </body>
</html>
