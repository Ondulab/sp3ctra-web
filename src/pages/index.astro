---
import Header from "@components/layout/Header.astro";
import Hero from "@components/features/Hero.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import NewsCard from "@components/features/NewsCard.astro";
import ImgExpo from "@assets/images/expo-la-musique-des-photons-1.png";
import SectionHeader from "@components/base/SectionHeader.astro";
import copy from "@content/copy/fr.json";
import Footer from "@components/layout/Footer.astro";
---

<BaseLayout>
  <Header />
  <main>
    <Hero />
    <SectionHeader title={copy.news.sectionTitle} />
    <NewsCard content={copy.news.expo2025} image={ImgExpo} />
  </main>
  <Footer />
</BaseLayout>
