---
interface NavigationLink {
  label: string;
  href: string;
  external?: boolean;
}

interface Props {
  links: NavigationLink[];
  class?: string;
}

const { links, class: className = "" } = Astro.props;
---

<nav aria-label="Main navigation" class={className}>
  <ul class="flex flex-col md:flex-row gap-4 md:gap-8">
    {
      links.map((link) => (
        <li>
          <a
            href={link.href}
            target={link.external ? "_blank" : undefined}
            rel={link.external ? "noopener noreferrer" : undefined}
            class="text-foreground/80 hover:text-foreground transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-background rounded-sm px-2 py-1"
          >
            {link.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
