---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="container flex items-center gap-8 py-12 md:py-24">
  <div class="h-[1px] flex-1 bg-gradient-to-r from-transparent to-[var(--color-foreground)]"></div>
  <h2
    class="font-mono text-sm font-semibold tracking-[0.2em] text-[var(--color-foreground)] uppercase"
  >
    {title}
  </h2>
  <div class="h-[1px] flex-1 bg-gradient-to-l from-transparent to-[var(--color-foreground)]"></div>
</div>
