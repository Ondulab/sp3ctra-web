---
import { tv, type VariantProps } from "tailwind-variants";

const headingStyles = tv({
  base: "font-mono font-bold leading-tight",
  variants: {
    level: {
      h1: "text-4xl md:text-5xl lg:text-6xl",
      h2: "text-3xl md:text-4xl lg:text-5xl",
      h3: "text-2xl md:text-3xl lg:text-4xl",
      h4: "text-xl md:text-2xl lg:text-3xl",
    },
    color: {
      default: "text-foreground",
      gradient: "bg-gradient-to-r from-purple-500 to-blue-500 bg-clip-text text-transparent",
      muted: "text-foreground/70",
    },
  },
  defaultVariants: {
    level: "h2",
    color: "default",
  },
});

interface Props extends VariantProps<typeof headingStyles> {
  as?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6"; // Semantic HTML element
  class?: string;
}

const { as, class: className, level, color, ...rest } = Astro.props;

// Determine the HTML element to use - 'as' prop takes precedence, otherwise use 'level'
const Element = as || level || "h2";
---

<Element class={headingStyles({ level, color, className })} {...rest}>
  <slot />
</Element>
