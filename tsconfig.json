{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "paths": {
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@content/*": ["./src/content/*"],
      "@assets/*": ["./src/assets/*"],
      "@scripts/*": ["./src/scripts/*"],
      "@/*": ["./src/*"]
    },
    "verbatimModuleSyntax": true
  }
}
